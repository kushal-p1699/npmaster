{
  "name": "npmaster",
  "displayName": "NPMaster",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "npmaster",
          "title": "NPMaster",
          "icon": "$(package)"
        }
      ]
    },
    "views": {
      "npmaster": [
        {
          "id": "npmaster.view",
          "name": "NPMaster"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "npmaster.view",
        "contents": "Detecting Node project...",
        "when": "npmaster.state === loading"
      },
      {
        "view": "npmaster.view",
        "contents": "Welcome to NPMaster!\n[Open a Node Project](command:npmaster.openProject)\nOnce you open a project with a package.json, installed packages will be listed here.",
        "when": "npmaster.state === notDetected"
      }
    ],
    "commands": [
      {
        "command": "npmaster.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
